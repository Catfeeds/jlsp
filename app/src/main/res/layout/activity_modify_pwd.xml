<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/windowBackground"
              android:orientation="vertical">
    <include layout="@layout/layout_head"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="@dimen/dm_10"
        android:layout_marginRight="@dimen/dm_15"
        android:layout_marginTop="@dimen/dm_15"
        android:background="@drawable/gray_frame_5dp"
        android:padding="@dimen/dm_10">
        <ImageView
            android:id="@+id/iv_old_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_pwd_gray"/>

        <EditText
            android:id="@+id/et_old_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/iv_old_pwd"
            android:inputType="textPassword"
            android:background="@color/transparent"
            android:hint="输入原密码"
            android:maxLength="30"
            android:textColor="@color/blackC"
            android:textSize="@dimen/t14"/>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="@dimen/dm_10"
        android:layout_marginRight="@dimen/dm_15"
        android:layout_marginTop="@dimen/dm_15"
        android:background="@drawable/gray_frame_5dp"
        android:padding="@dimen/dm_10">
        <ImageView
            android:id="@+id/iv_new_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_pwd_gray"/>

        <EditText
            android:id="@+id/et_new_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/iv_new_pwd"
            android:background="@color/transparent"
            android:hint="输入新密码"
            android:inputType="textPassword"
            android:maxLength="30"
            android:textColor="@color/blackC"
            android:textSize="@dimen/t14"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="@dimen/dm_10"
        android:layout_marginRight="@dimen/dm_15"
        android:layout_marginTop="@dimen/dm_15"
        android:background="@drawable/gray_frame_5dp"
        android:padding="@dimen/dm_10">
        <ImageView
            android:id="@+id/iv_aging_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_pwd_gray"/>

        <EditText
            android:id="@+id/et_aging_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/iv_aging_pwd"
            android:background="@color/transparent"
            android:hint="确认新密码"
            android:maxLength="30"
            android:inputType="textPassword"
            android:textColor="@color/blackC"
            android:textSize="@dimen/t14"/>


    </RelativeLayout>
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_10"
        android:layout_marginRight="@dimen/dm_10"
        android:layout_marginTop="@dimen/dm_15"
        android:background="@drawable/common_yellow_5dp"
        android:text="确认修改"
        android:textColor="@color/blackC"
        android:textSize="@dimen/t16"/>


</LinearLayout>