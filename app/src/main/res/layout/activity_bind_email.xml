<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/windowBackground"
              android:orientation="vertical">
    <include layout="@layout/layout_head"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="@dimen/dm_10"
        android:layout_marginRight="@dimen/dm_15"
        android:layout_marginTop="@dimen/dm_15"
        android:background="@drawable/gray_frame_5dp"
        android:padding="@dimen/dm_10">
        <ImageView
            android:id="@+id/iv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_email_off"/>

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dm_10"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_email"
            android:background="@color/transparent"
            android:hint="输入邮箱"
            android:maxLength="30"
            android:textColor="@color/blackC"
            android:textSize="@dimen/t14"/>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="@dimen/dm_10"
        android:layout_marginRight="@dimen/dm_15"
        android:layout_marginTop="@dimen/dm_15"
        android:background="@drawable/gray_frame_5dp"
        >
        <ImageView
            android:id="@+id/iv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm_10"
            android:src="@drawable/ic_invitation_off"/>


        <TextView
            android:id="@+id/tv_code"
            android:layout_width="90dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dm_5"
            android:background="@drawable/btn_code_selector"
            android:gravity="center"
            android:text="发送验证码"
            android:textColor="@drawable/task_font_selector"
            android:textSize="@dimen/t14"/>

        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm_10"
            android:layout_toLeftOf="@+id/tv_code"
            android:layout_toRightOf="@+id/iv_code"
            android:background="@color/transparent"
            android:hint="请输入验证码"
            android:maxLength="10"
            android:textColor="@color/blackC"
            android:textSize="@dimen/t14"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_10"
        android:layout_marginRight="@dimen/dm_10"
        android:layout_marginTop="@dimen/dm_15"
        android:background="@drawable/common_yellow_5dp"
        android:text="认证"
        android:textColor="@color/blackC"
        android:textSize="@dimen/t16"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm_5"
        android:gravity="center"
        android:text="认证完成后将不可更改，请谨慎"
        android:textColor="@color/blackA"
        android:textSize="@dimen/t14"/>

</LinearLayout>