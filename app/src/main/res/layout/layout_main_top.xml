<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/main_bg"
    android:padding="@dimen/dm_10">


    <com.zb.wyd.widget.CircleImageView
        android:id="@+id/iv_user_pic"
        android:layout_width="@dimen/dm_30"
        android:layout_height="@dimen/dm_30"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_user_head" />


    <TextView
        android:id="@+id/tv_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="签到"
        android:textColor="@color/text_white"
        android:textSize="@dimen/t16" />

    <RelativeLayout
        android:id="@+id/rl_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="@dimen/dm_7"
        android:layout_marginLeft="@dimen/dm_15"
        android:layout_marginRight="@dimen/dm_15"
        android:background="@drawable/main_top_search_bg"
        android:layout_toLeftOf="@id/tv_sign_in"
        android:layout_toRightOf="@id/iv_user_pic">

        <ImageView
            android:layout_marginLeft="@dimen/dm_5"
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_white_search"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@+id/iv_search"
            android:textSize="@dimen/t14"
            android:layout_marginLeft="@dimen/dm_10"
            android:textColor="@color/text_white"
            android:text="输入你想看的视频 主播 小说"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>