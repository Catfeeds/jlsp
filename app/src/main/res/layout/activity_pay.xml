<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/windowBackground"
              android:orientation="vertical">

    <include layout="@layout/layout_head"/>


    <RelativeLayout
        android:background="@color/white"
        android:padding="@dimen/dm_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:textSize="@dimen/t16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值额度"
            android:layout_centerVertical="true"
            android:textColor="@color/blackB"/>

        <TextView
            android:id="@+id/tv_money"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/t14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0元"
            android:textColor="@color/redA"/>

        <TextView
            android:id="@+id/tv_masonry"
            android:layout_toLeftOf="@+id/tv_money"
            android:textSize="@dimen/t16"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_masonry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_5"
            android:text="0="
            android:layout_marginRight="@dimen/dm_5"
            android:layout_centerVertical="true"
            android:textColor="@color/blackB"/>
    </RelativeLayout>



    <TextView
        android:background="@color/white"
        android:layout_marginTop="@dimen/dm_10"
        android:textSize="@dimen/t16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dm_15"
        android:text="充值方式"
        android:layout_centerVertical="true"
        android:textColor="@color/blackB"/>
    <View
        android:background="@color/line"
        android:layout_marginLeft="@dimen/dm_15"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_1"/>
    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/rl_alipay"
        android:padding="@dimen/dm_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_alipay"
            android:src="@drawable/ic_ali_pay"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_toRightOf="@+id/iv_alipay"
            android:textSize="@dimen/t16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_10"
            android:text="支付宝"
            android:layout_centerVertical="true"
            android:textColor="@color/blackB"/>

        <ImageView
            android:id="@+id/iv_alipay_selected"
            android:src="@drawable/ic_pay_on"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
        android:background="@color/line"
        android:layout_marginLeft="@dimen/dm_15"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_1"/>
    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/rl_wxpay"
        android:padding="@dimen/dm_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_wxpay"
            android:src="@drawable/ic_wxpay"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_toRightOf="@+id/iv_wxpay"
            android:textSize="@dimen/t16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_10"
            android:text="微信支付"
            android:layout_centerVertical="true"
            android:textColor="@color/blackB"/>

        <ImageView
            android:id="@+id/iv_wxpay_selected"
            android:src="@drawable/ic_pay_off"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
        android:background="@color/line"
        android:layout_marginLeft="@dimen/dm_15"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_1"/>
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_10"
        android:layout_marginRight="@dimen/dm_10"
        android:layout_marginTop="@dimen/dm_15"
        android:background="@drawable/common_yellow_5dp"
        android:text="确定充值"
        android:textColor="@color/blackC"
        android:textSize="@dimen/t16" />

</LinearLayout>