<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/windowBackground"
                android:orientation="vertical">
    <include layout="@layout/layout_head"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_head">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <EditText
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:hint="输入图集标题(必填)"
                android:padding="@dimen/dm_10"
                android:textColor="@color/blackC"
                android:textSize="@dimen/dm_14"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_0.5"
                android:layout_marginLeft="@dimen/dm_10"
                android:layout_marginRight="@dimen/dm_10"
                android:background="@color/windowBackground"/>


            <EditText
                android:id="@+id/et_desc"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_100"
                android:background="@color/transparent"
                android:gravity="left|top"
                android:hint="输入图集描述"
                android:maxLength="300"
                android:padding="@dimen/dm_10"
                android:textColor="@color/blackC"
                android:textSize="@dimen/dm_14"/>


            <TextView
                android:id="@+id/tv_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:text="0/300"
                android:textColor="@color/blackA"
                android:textSize="@dimen/t14"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_10"
                android:background="@color/line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm_15"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_free"
                    android:layout_width="@dimen/dm_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/photo_tab_bg_selector"
                    android:gravity="center"
                    android:padding="@dimen/dm_15"
                    android:text="上传免费图片"
                    android:textColor="@drawable/photo_tab_font_selector"
                    android:textSize="@dimen/t14"/>
                <TextView
                    android:id="@+id/tv_charge"
                    android:layout_width="@dimen/dm_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/photo_tab_bg_selector"
                    android:gravity="center"
                    android:padding="@dimen/dm_15"
                    android:text="上传收费图片"
                    android:textColor="@drawable/photo_tab_font_selector"
                    android:textSize="@dimen/t14"/>
            </LinearLayout>

            <com.zb.wyd.widget.MaxRecyclerView
                android:id="@+id/rv_free"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm_10"
                android:paddingLeft="@dimen/dm_5"
                android:visibility="gone"/>
            <com.zb.wyd.widget.MaxRecyclerView
                android:id="@+id/rv_charge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm_10"
                android:paddingLeft="@dimen/dm_5"
                android:visibility="gone"/>
            <LinearLayout
                android:id="@+id/ll_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm_0.5"
                    android:layout_marginLeft="@dimen/dm_10"
                    android:layout_marginRight="@dimen/dm_10"
                    android:background="@color/windowBackground"/>

                <EditText
                    android:id="@+id/et_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:digits="1234567890"
                    android:hint="输入您要收取的费用5-200积分"
                    android:inputType="number"
                    android:maxLength="3"
                    android:padding="@dimen/dm_10"
                    android:textColor="@color/blackC"
                    android:textSize="@dimen/t14"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_0.5"
                android:layout_marginLeft="@dimen/dm_10"
                android:layout_marginRight="@dimen/dm_10"
                android:background="@color/windowBackground"/>
            <com.zb.wyd.widget.MaxRecyclerView
                android:id="@+id/rv_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dm_10">


                <LinearLayout
                    android:id="@+id/ll_tags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cat_frame_45dp"
                    android:paddingBottom="@dimen/dm_5"
                    android:paddingLeft="@dimen/dm_15"
                    android:paddingRight="@dimen/dm_15"
                    android:paddingTop="@dimen/dm_5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="添加标签"
                        android:textColor="@color/blackA"
                        android:textSize="@dimen/t12"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm_10"
                    android:background="@drawable/cat_frame_45dp"
                    android:paddingBottom="@dimen/dm_5"
                    android:paddingLeft="@dimen/dm_15"
                    android:paddingRight="@dimen/dm_15"
                    android:paddingTop="@dimen/dm_5">

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="添加地点"
                        android:textColor="@color/blackA"
                        android:textSize="@dimen/t12"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_10"
                android:background="@color/windowBackground"/>


            <EditText
                android:id="@+id/et_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:hint="输入您的联系方式"
                android:padding="@dimen/dm_10"
                android:textColor="@color/blackC"
                android:textSize="@dimen/t14"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>