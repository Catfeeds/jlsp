<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_login"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true" android:layout_alignParentTop="true" android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dm_15"
            android:src="@drawable/ic_white_back"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_15"
            android:layout_marginRight="@dimen/dm_15"
            android:layout_marginTop="@dimen/dm_20"
            android:background="@drawable/login_frame_45dp"
            android:padding="@dimen/dm_15">


            <ImageView
                android:id="@+id/iv_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_account_selector"/>

            <EditText
                android:id="@+id/et_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dm_5"
                android:layout_toRightOf="@+id/iv_account"
                android:background="@color/transparent"
                android:hint="请输入用户名"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/t16"/>
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_next"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_15"
            android:layout_marginRight="@dimen/dm_15"
            android:layout_marginTop="@dimen/dm_10"
            android:background="@drawable/login_frame_45dp"
            android:padding="@dimen/dm_15">


            <ImageView
                android:id="@+id/iv_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pwd_selector"/>

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dm_5"
                android:layout_toRightOf="@+id/iv_pwd"
                android:background="@color/transparent"
                android:hint="设置您的新密码"
                android:inputType="textPassword"
                android:maxLength="18"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/t16"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_15"
            android:layout_marginRight="@dimen/dm_15"
            android:layout_marginTop="@dimen/dm_10"
            android:background="@drawable/login_frame_45dp"
            android:padding="@dimen/dm_15">


            <ImageView
                android:id="@+id/iv_pwd1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pwd_selector"/>

            <EditText
                android:id="@+id/et_pwd1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dm_5"
                android:layout_toRightOf="@+id/iv_pwd1"
                android:background="@color/transparent"
                android:hint="再输一次"
                android:inputType="textPassword"
                android:maxLength="18"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/t16"/>
        </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_15"
            android:layout_marginRight="@dimen/dm_15"
            android:layout_marginTop="@dimen/dm_30"
            android:background="@drawable/btn_login_frame_45dp"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="@dimen/t16"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dm_15"
        android:gravity="center_horizontal"
        android:text="防丢邮箱,发邮件到1111@163.com获取最新地址"
        android:textColor="@color/white"
        android:textSize="@dimen/t14"/>
</RelativeLayout>