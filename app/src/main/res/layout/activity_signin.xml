<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:orientation="vertical">

    <include layout="@layout/layout_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_head"
        android:background="@drawable/main_bg"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dm_15"
        android:paddingBottom="@dimen/dm_60">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_signIn_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/t18"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="已连续签到(天)"
                android:textColor="@color/white"
                android:textSize="@dimen/t14" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_signIn_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/t18"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="今日获得积分"
                android:textColor="@color/white"
                android:textSize="@dimen/t14" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_total_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/t18"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="可用总积分"
                android:textColor="@color/white"
                android:textSize="@dimen/t14" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_head"
        android:layout_marginLeft="@dimen/dm_15"
        android:layout_marginTop="@dimen/dm_80"
        android:layout_marginRight="@dimen/dm_15"
        android:background="@drawable/common_white_15dp"
        android:orientation="vertical"
        android:padding="@dimen/dm_15">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dm_5"
            android:text="获得更多积分"
            android:textColor="@color/black"
            android:textSize="@dimen/t16" />

        <view
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_1"
            android:background="@color/line" />


        <RelativeLayout
            android:paddingTop="@dimen/dm_10"
            android:paddingBottom="@dimen/dm_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_share"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_hover_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:layout_marginLeft="@dimen/dm_10"
                android:layout_toRightOf="@+id/iv_share"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">

                <TextView
                    android:text="分享邀请好友"
                    android:textSize="@dimen/t14"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="新用户完成注册 +100积分"
                    android:textSize="@dimen/t12"
                    android:textColor="@color/text_violet_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>