<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dm_15"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/bg_dialog_top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="余额不做提醒"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_closed"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dm_15"
            android:src="@drawable/ic_closed" />
    </RelativeLayout>

    <TextView
        android:layout_marginTop="@dimen/dm_15"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="余额不足，请先赚取积分或者充值"
        android:textColor="#4D3556"
        android:textSize="@dimen/t16" />



    <LinearLayout
        android:layout_marginTop="@dimen/dm_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bug_vip"
            android:gravity="center"
            android:padding="@dimen/dm_10"
            android:text="赚取积分"
            android:layout_marginRight="@dimen/dm_15"
            android:textColor="@color/white"
            android:textSize="@dimen/t16" />

        <TextView
            android:id="@+id/tv_svip"
            android:layout_marginLeft="@dimen/dm_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_buy_jifen"
            android:gravity="center"
            android:padding="@dimen/dm_10"
            android:text="去充值"
            android:textColor="#B47C36"
            android:textSize="@dimen/t16" />


    </LinearLayout>
</LinearLayout>