<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dm_10"
        android:padding="@dimen/dm_15"
        android:src="@drawable/ic_white_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dm_15"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dm_15"
            android:background="@drawable/common_white_15dp"
            android:orientation="vertical"
            android:padding="@dimen/dm_25">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注册"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/t24" />

                <LinearLayout
                    android:id="@+id/ll_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已有账号？"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/t14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="登录"
                        android:textColor="@color/text_violet_normal"
                        android:textSize="@dimen/t14" />


                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm_15"
                android:text="用户名"
                android:textColor="@color/text_gray" />

            <EditText
                android:id="@+id/et_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm_5"
                android:background="@drawable/common_f5_45dp"
                android:hint="请输入用户名"
                android:maxLength="16"
                android:paddingLeft="@dimen/dm_15"
                android:paddingTop="@dimen/dm_10"
                android:paddingBottom="@dimen/dm_10"
                android:textColor="@color/text_black"
                android:textColorHint="@color/text_violet"
                android:textSize="@dimen/t14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm_15"
                android:text="密码"
                android:textColor="@color/text_gray" />

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm_5"
                android:background="@drawable/common_f5_45dp"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:maxLength="18"
                android:paddingLeft="@dimen/dm_15"
                android:paddingTop="@dimen/dm_10"
                android:paddingBottom="@dimen/dm_10"
                android:textColor="@color/text_black"
                android:textColorHint="@color/text_violet"
                android:textSize="@dimen/t14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm_15"
                android:text="重复密码"
                android:textColor="@color/text_gray" />

            <EditText
                android:id="@+id/et_pwd1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm_5"
                android:background="@drawable/common_f5_45dp"
                android:hint="再一次输入"
                android:inputType="textPassword"
                android:maxLength="18"
                android:paddingLeft="@dimen/dm_15"
                android:paddingTop="@dimen/dm_10"
                android:paddingBottom="@dimen/dm_10"
                android:textColor="@color/text_black"
                android:textColorHint="@color/text_violet"
                android:textSize="@dimen/t14" />

            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm_30"
                android:background="@drawable/violet_frame_on_45dp"
                android:text="注册"
                android:textColor="@color/white"
                android:textSize="@dimen/t16" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>