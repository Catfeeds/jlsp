<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dm_15"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/bg_dialog_top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="会员开通提醒"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_closed"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dm_15"
            android:src="@drawable/ic_closed" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dm_15"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="观看需要使用积分或者VIP权限"
            android:textColor="#4D3556"
            android:textSize="@dimen/t16" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dm_5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本次观看需要"
                android:textColor="#4D3556"
                android:textSize="@dimen/t16" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:text="0"
                android:textColor="#A56A24"
                android:textSize="@dimen/t16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="积分"
                android:textColor="#4D3556"
                android:textSize="@dimen/t16" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_user_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="可用积分：1600"
        android:textColor="#A56A24"
        android:textSize="@dimen/t16" />

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm_10"
        android:gravity="center"
        android:textColor="@color/blackA"
        android:textSize="@dimen/t14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dm_15"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bug_vip"
            android:gravity="center"
            android:padding="@dimen/dm_10"
            android:text="购买VIP"
            android:layout_marginRight="@dimen/dm_15"
            android:textColor="@color/white"
            android:textSize="@dimen/t16" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_marginLeft="@dimen/dm_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_buy_jifen"
            android:gravity="center"
            android:padding="@dimen/dm_10"
            android:text="积分兑换"
            android:textColor="#B47C36"
            android:textSize="@dimen/t16" />


    </LinearLayout>
</LinearLayout>