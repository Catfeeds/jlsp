<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item"
    android:layout_width="match_parent"
    android:background="@drawable/gift_frame_selector"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    >


    <ImageView
        android:id="@+id/iv_gift_pic"
        android:layout_width="@dimen/dm_80"
        android:layout_height="@dimen/dm_60"
        android:scaleType="center"
        android:src="@drawable/ic_gift_666" />


    <TextView
        android:id="@+id/tv_gift_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="666"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="@dimen/t14" />

    <RelativeLayout
        android:layout_marginBottom="@dimen/dm_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
     >


        <ImageView
            android:id="@+id/iv_masonry"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_masonry" />

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_gift_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_masonry"
            android:text="666"
            android:textColor="@color/yellow"
            android:textSize="@dimen/t14" />
    </RelativeLayout>


</LinearLayout>