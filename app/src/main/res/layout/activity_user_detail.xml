<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/windowBackground"
              android:orientation="vertical">
    <include layout="@layout/layout_head"/>


    <RelativeLayout
        android:id="@+id/ll_user_pic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_60"
        android:layout_marginTop="@dimen/dm_10"
        android:background="@color/white"
        android:paddingLeft="@dimen/dm_10"
        android:paddingRight="@dimen/dm_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="头像"
            android:textColor="@color/blackC"
            android:textSize="@dimen/t16"/>

        <com.zb.wyd.widget.CircleImageView
            android:id="@+id/iv_user_pic"
            android:layout_width="@dimen/dm_40"
            android:layout_height="@dimen/dm_40"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dm_10"
        android:layout_marginRight="@dimen/dm_10"
        android:background="@color/line"/>


    <RelativeLayout
        android:id="@+id/ll_user_nick"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_60"
        android:layout_marginRight="@dimen/dm_10"
        android:background="@color/white"
        android:paddingLeft="@dimen/dm_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="昵称"
            android:textColor="@color/blackC"
            android:textSize="@dimen/t16"/>

        <ImageView
            android:id="@+id/iv_arrow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_right_48"/>

        <TextView
            android:id="@+id/tv_user_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dm_10"
            android:layout_toLeftOf="@+id/iv_arrow1"
            android:textColor="@color/blackC"
            android:textSize="@dimen/t16"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dm_10"
        android:layout_marginRight="@dimen/dm_10"
        android:background="@color/line"/>
    <RelativeLayout
        android:id="@+id/ll_user_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_60"
        android:layout_marginRight="@dimen/dm_10"
        android:background="@color/white"
        android:paddingLeft="@dimen/dm_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="修改密码"
            android:textColor="@color/blackC"
            android:textSize="@dimen/t16"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_right_48"/>


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dm_10"
        android:layout_marginRight="@dimen/dm_10"
        android:background="@color/line"/>
    <RelativeLayout
        android:id="@+id/ll_bind_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_60"
        android:layout_marginRight="@dimen/dm_10"
        android:background="@color/white"
        android:paddingLeft="@dimen/dm_10">

        <TextView
            android:id="@+id/tv_phone_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="绑定手机"
            android:textColor="@color/blackC"
            android:textSize="@dimen/t16"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_right_48"/>


    </RelativeLayout>
</LinearLayout>