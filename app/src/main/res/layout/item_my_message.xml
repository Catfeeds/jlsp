<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_item"
    android:background="@color/windowBackground"
    android:orientation="vertical"
    android:padding="@dimen/dm_15">


    <com.zb.wyd.widget.CircleImageView
        android:id="@+id/iv_user_pic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_user" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dm_15"
        android:layout_toRightOf="@+id/iv_user_pic"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="name"
                android:textColor="@color/blackC"
                android:textSize="@dimen/t16" />

            <ImageView
                android:id="@+id/iv_user_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dm_3"
                android:layout_toRightOf="@+id/tv_name"
                android:src="@drawable/ic_woman" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dm_3"
            android:text="time"
            android:textColor="@color/blackA"
            android:textSize="@dimen/t12" />
    </LinearLayout>


    <TextView

        android:id="@+id/tv_msg_mun"
        android:layout_width="@dimen/dm_20"
        android:layout_height="@dimen/dm_20"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_circle"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="@dimen/dm_12" />


</RelativeLayout>